<%= form_with(model: business) do |form| %>
  <% if business.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(business.errors.count, "error") %> prohibited this payee/vendor from being saved:</h2>

      <ul>
        <% business.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.number_field :user_id, id: :business_user_id, value: current_user.id, type: :hidden %>
  </div>

  <div class="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :phone_number, style: "display: block" %>
    <%= form.text_field :phone_number, class: "form-control " %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :notes, style: "display: block" %>
    <%= form.text_area :notes, class: "form-control" %>
  </div>

  <div>
    <%= form.submit buttonOverride(business, "payee / vendor"), class: "btn btn-primary"  %>
  </div>
<% end %>
