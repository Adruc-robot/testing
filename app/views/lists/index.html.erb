<p style="color: green"><%= notice %></p>

<h1>My Categories</h1>

<table id="lists" class="table table-striped" data-controller="dataTables">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Edit</th>
      <th>Delete</th>
      <th>+/- category items</th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
      <%= render list %>
    <% end %>
  </tbody>
</table>

<%= link_to "New category", new_list_path %>
